<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".H1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="91dp"
                android:layout_height="76dp"

                app:srcCompat="@drawable/chaselogo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="কিভাবে সাহায্য করতে পারি?"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:text="সমাধান চাই।  "
                android:textSize="25dp" />

            <ImageView

                android:id="@+id/imageView22"
                android:layout_width="91dp"
                android:layout_height="76dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/farmer" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="91dp"
                android:layout_height="76dp"

                app:srcCompat="@drawable/chaselogo" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="সমস্যা লিখে সাবমিট করুন। "
                android:textSize="25dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/cp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:text="এখানে ফসলের নাম লিখুন     "
            android:textSize="25dp" />
        <EditText
            android:id="@+id/pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:text="এখানে সমস্যার কথা লিখুন     "
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="সাবমিট"
                android:onClick="psub"/>

            <ImageView

                android:id="@+id/imageView2"
                android:layout_width="91dp"
                android:layout_height="76dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/farmer" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="91dp"
                android:layout_height="76dp"

                app:srcCompat="@drawable/chaselogo" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/h1ans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="অপেক্ষা করুন,\nআমি খুঁজে দেখছি।  "
                        android:textSize="25dp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="হোম এ ফিরুন"
            android:onClick="back"/>
    </LinearLayout>



</RelativeLayout>